.error, .important {
    background-color: #ff8888;
    color: red;
    font-weight: bold;

    strong, em {
        text-decoration: underline;
    }

    > p, div {
        margin: 0;
    }

    + p {
        margin-top: 2em;
    }

    ~ I am {
        out: of ideas;
    }
}

a {
    text-decoration: none;
    &:hover, .hover {
        text-decoration: underline;
    }
    & :hover, .hover {
        color: #F00;
    }
}
